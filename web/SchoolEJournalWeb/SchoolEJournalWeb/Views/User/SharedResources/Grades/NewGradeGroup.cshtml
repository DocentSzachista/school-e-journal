@{
	ViewData["Title"] = "Nowa grupa ocen";
}

@model SchoolEJournalWeb.ViewModels.TeacherGradeGroupView

@using (Html.BeginForm("AddNewGroup", "Grade", Model)) {
	<label>Nazwa grupy</label>
	@Html.TextBoxFor(model => model.GradeGroupName, new { @class = "form-control" });
	<label>Waga ocen</label>
	@Html.TextBoxFor(model => model.GradeGroupWeight, new { @class = "form-control", @type = "number" });
	<button class="btn btn-primary" type="submit">Stwórz</button>
}
