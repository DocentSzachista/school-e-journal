@{
    ViewData["Title"] = "Sprawdź obecność";
}
@model  SchoolEJournalWeb.ViewModels.UpdateLessonView

@using (Html.BeginForm("AttendanceCheck", "Calendar", FormMethod.Post))
{
    //SchoolEJournalWeb.ViewModels.UpdateLessonView updateLessonView = (SchoolEJournalWeb.ViewModels.UpdateLessonView)ViewData["UpdateData"];

    <input type="text"  value=@(Model.Lesson.Topic)   class="form-control" name="Topic"/>
    <input type="text"  value=@(Model.Lesson.LessonId) name ="id" hidden />
    <br />
    <ul>
    @foreach (var item in Model.attendances)
    {
        
        <li>
            <label for="att" class="col-form-label"> @(item.UserName) </label>
            <select id="att" name="attendence-@(item.AttId)" class="form-control">
                @if (item.Att == 0)
                {
                    <option value="0" selected> Nie sprawdzono </option>
                }
                else
                {
                    <option value="0"> Nie sprawdzono </option>
                }
                @if (item.Att == 1)
                {
                    <option value="1" selected> Obecny </option>
                }
                else
                {
                    <option value="1"> Obecny</option>
                }
                @if (item.Att == 2)
                {
                    <option value="2" selected> Spóźnony</option>
                }
                else
                {
                    <option value="2">Spóźnony </option>
                }
                @if (item.Att == 3)
                {
                    <option value="3" selected>Nieobecny </option>
                }
                else
                {
                    <option value="3"> Nieobecny </option>
                }
            </select>
        </li>
    }
    </ul>
    <input class="btn btn-success" type="submit" value="Zmień"/>

}
